<% include partials/header %>

<div class="container">
	<h1 class="_textCenter jumbotron">Sign Up! 注册！</h1>
	
	<form class="_form" action="/signup" method="POST">
		<div class="form-group">
			<label for="signUpPageUsernameInput">Ur edu email(username)/你的学校edu邮箱（用户名）<span class="_required">*</span></label>
		  <div class="input-group">
	        <div class="input-group-prepend">
	          <span class="input-group-text">@</span>
	        </div>
	        <input type="text" class="form-control" id="signUpPageUsernameInput" placeholder="hello@usc.edu" name="username" required="">
	        <div class="invalid-feedback" style="width: 100%;">
	          Your college email is required.
	        </div>
	      </div>
		</div>

		<div class="form-group">
		    <label for="signUpPagePasswordInput">Ur password<span class="_required">*</span></label>
		    <input type="password" class="form-control" id="signUpPagePasswordInput" placeholder="***" name="password" required="">
		</div>

		<button class="btn btn-outline-primary">
		Sign Up!
		</button>
		
		<p></p>

		<div class="_note">
			<div>Already have an account? Login! </div>
			<a href="/login" class="btn btn-outline-primary">
			 Here!
			</a>
		</div>
	</form>


 		
	



</div>

