<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/css/myaccount.css">

<div class="container">

	<h1 class="_textCenter jumbotron">MY LISTINGS</h1>

	<div class="_cardComplex">
		<% thisUser.supplyPosts.forEach(function(supply){ %>
			<div class="card _floatedL" style="width: 288px; margin: 6px; margin-bottom: 10px;">
				<div class="_cardImgBox">
					<!-- /img/logo2.png -->
					<img class="card-img-top" style="height: 100%;object-fit: cover;" src="<%=supply.s_photoUrl%>" alt="Do u know the way" onerror="this.onerror=null;this.src='/img/logo2.png';">
				</div>
			  
			  <div class="card-body">
			    <h6 class="card-title"><%= supply.s_unit%> unit(s) available</h6>
			    <p class="card-text"><%= supply.s_description%></p>

					<% var s = supply.s_college; %>
					<% s = s.substring(0, s.indexOf('(')); %>
			    <p style="font-size: 0.8em;"><%=s %>: <%=supply.s_starting%> -> <%=supply.s_ending%></p>
			    <a href="#" class="btn btn-primary">Detail</a>
			    <a href="#" class="btn btn-secondary">Edit</a>

			    <form class="_deleteform" onsubmit="return confirm('Do you really want DELETE this storage listing?');" action="/userpage/supply/<%= supply._id %>/delete?_method=DELETE" method="POST">
						<button type="submit" class="oi oi-trash" style="
							background:none!important;
	    				border:none; 
	    				padding:0!important;">
							<!-- <span class="oi oi-trash"></span> -->
						</button>
					</form>
			  </div>
			</div>

		<% }); %>
	</div>

	<div class="_clearFloat"></div>

	<% if(thisUser.supplyPosts.length===0){%>
		<div class="_textCenter">
			<h3>Sorry you dont have any storage listing uploaded yet. </h3>
			<h3>You can start creating one <a href="/supply">here</a></h3>
		</div>
	<%}%>
</div>

<% include ../partials/footer %>